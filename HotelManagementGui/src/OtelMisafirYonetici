import java.util.ArrayList;

public class OtelMisafirYonetici {
    private ArrayList<Misafir> misafirler;

    public OtelMisafirYonetici() {
        misafirler = new ArrayList<>();
    }

    public void misafirEkle(Misafir misafir) {
        misafirler.add(misafir);
    }

    public ArrayList<Misafir> getMisafirler() {
        return misafirler;
    }

    public boolean silRezervasyon(String rezervasyonNo) {
        for (int i = 0; i < misafirler.size(); i++) {
            if (misafirler.get(i).getRezervasyonNo().equals(rezervasyonNo)) {
                misafirler.remove(i);
                return true;
            }
        }
        return false;
    }
}
