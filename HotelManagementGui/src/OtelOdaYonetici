import java.util.ArrayList;

public class OtelOdaYonetici {
    private ArrayList<Oda> odalar; // Oda listesini saklÄ±yoruz

    public OtelOdaYonetici() {
        odalar = new ArrayList<>();
    }

    // Oda ekleme
    public void odaEkle(Oda oda) {
        odalar.add(oda);
    }

    // Oda silme
    public boolean odaSil(int odaNumarasi) {
        for (int i = 0; i < odalar.size(); i++) {
            if (odalar.get(i).getOdaNumarasi() == odaNumarasi) {
                odalar.remove(i);
                return true;
            }
        }
        return false;
    }

    // Oda mevcut mu?
    public boolean odaMevcutMu(int odaNumarasi) {
        for (Oda oda : odalar) {
            if (oda.getOdaNumarasi() == odaNumarasi) {
                return true;
            }
        }
        return false;
    }

    // Oda listesini alma
    public ArrayList<Oda> getOdalar() {
        return odalar;
    }
}
